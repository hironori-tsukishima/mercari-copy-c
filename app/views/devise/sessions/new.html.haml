.signinWrapper
  .signinMain
    .signinPanel
      .signinNoAccount
        %p アカウントをお持ちでない方はこちら
        =link_to "新規会員登録", "#", class: "signinCardSignup"
      %hr.horizon
      .signinForm
        .signinFormFacebook
          = link_to "#" do
            =fa_icon 'fa-facebook-f', class: 'fa-facebook-square'
            .signinFormFacebookCard
              Facebookでログイン
        .signinFormGoogle
          = link_to "#" do
            =fa_icon 'fa-google-plus-square', class: 'fa-google-plus'
            .signinFormGoogleCard
              Googleでログイン
      .signinFormWrapper
        .signinForm
          .signinFormEmail
            %input{placeholder: "メールアドレス"}
          .signinFormPassword
            %input{placeholder: "パスワード"}
          .signinFormRecapcha
            %img{alt: "ロボットではありません", height: "75", src: "https://i.gyazo.com/558c420173f936369c4fd6afb54e149b.png", width: "300"}
          .signinFormButton
            =link_to "ログイン", "#"
          .signinFormForgetPassword
            =link_to "パスワードをお忘れの方", "#"
