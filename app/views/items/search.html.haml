%nav.searchItem
  %ul.searchItemList
    %li.searchItemListToppageLink
      = link_to "メルカリ", toppages_path, class: "searchItemLinkToppage",style: "text-decoration: none;"
      = fa_icon 'fa-angle-right', class: 'fa-angle-right'
    %li.searchItemListKeyword
      = @keyword
.searchItemWrapper
  .searchItemNav
    = render partial: 'searchNav', locals: { item: @itemSearch, largecategory_id: @largeCategory_id}
  .searchItemMain
    .searchItemMainHeader
      - if params[:keyword].present?
        %h2.searchItemMainHeaderText 検索結果〇〇件
      - elsif @itemSearch.present?
        %h2.searchItemMainHeaderText 検索結果〇〇件
      -else
        %h2.searchItemMainHeaderText 検索結果 0件
        %p 該当する商品が見つかりません。商品は毎日増えていますので、これからの出品に期待してください。
        / %h3 新着商品
    .searchItemMainBody
      - if params[:keyword].present?
        - @items.each do |item|
          .searchItemMainBodyItemBox
            = link_to "/items/purchase/#{item.id}", style: "color:black;", class: "ItemBoxLink" do
              .searchItemMainBodyItemBoxImage
                = image_tag item.item_images.first.image, size: '160x160'
              .searchItemMainBodyItemInfo
                %h3
                  = item.name
                .searchItemMainBodyItemInfoBottom
                  .searchItemMainBodyItemInfoBottomPrice
                    %span.searchItemMainBodyItemInfoBottomPriceProduct
                      = "¥ #{item.price}"
                    %p (税込)
                  .searchItemMainBodyItemInfoBottomLike
                    = fa_icon 'fa-heart', class: 'fa-heart'
                    3
      - elsif @itemSearch.present?
        - @itemSearch.each do |item|
          .searchItemMainBodyItemBox
            = link_to "/items/purchase/#{item.id}", style: "color:black;", class: "ItemBoxLink" do
              .searchItemMainBodyItemBoxImage
                = image_tag item.item_images.first.image, size: '160x160'
              .searchItemMainBodyItemInfo
                %h3
                  = item.name
                .searchItemMainBodyItemInfoBottom
                  .searchItemMainBodyItemInfoBottomPrice
                    %span.searchItemMainBodyItemInfoBottomPriceProduct
                      = "¥ #{item.price}"
                    %p (税込)
                  .searchItemMainBodyItemInfoBottomLike
                    = fa_icon 'fa-heart', class: 'fa-heart'
                    3
    .searchItemPage
      / = paginate(@itemsPages)
